<html>
<body>
    <h1> Cadastro de Livros </h1>

    <form action="/books" method="post">
        <div if(data.book.id)>
            <input type="hidden" name="_method" value="PUT">
            <input type="hidden" id="id" name="id" value="${data.book.id}"/>
        </div>

        <div>
            <label for="titulo"> Titulo </label>
            <input type="text" id="titulo" name="titulo" value="${data.book.titulo}">
        </div>
        <div>
            <label for="preco"> Preço</label>
            <input type="text" id="preco" name="preco" value="${data.book.preco}">
        </div>
        <div>
            <label for="descricao">Descrição </label>
            <textarea cols="20" rows="10" id="descricao" name="descricao"> ${data.book.descricao} </textarea>
        </div>
        <input type="submit" value="Salvar" />
    </form>
</body>
</html>